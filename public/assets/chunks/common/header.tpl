<header class="row position-relative">
    <div class="container-custom d-none d-lg-block">
        
        <div class="row align-items-center justify-content-between">
            
            <div class="col-lg-auto">
                <div class="row align-items-center justify-content-between">
                    
                    <div class="col-auto">
                        [[$address]]
                    </div>
                </div>
            </div>
            
            <!--div class="col-lg-auto menu-mobile" id="menu-mobile"-->
            <div class="col-lg-auto menu-mobile" id="menu-mobile">
                <div class="row justify-content-end align-items-center ">
                    
                    <div class="col-lg-auto">
                        <a href="#modal-question" class="link link-grey" data-toggle="modal">Задать вопрос специалисту</a>
                    </div>
                    
                    <div class="col-lg-auto">
                        <a href="[[++license]]"  class="link link-blue"  target="_blank" >[[++license-name]]</a>
                    </div>
                    
                    <div class="col-lg-auto">
                        <p class="font-black">[[++phone]]</p>
                    </div>
                    <div class="col-lg-auto">
                        <div class="row socials-links mb-lg-0 mb-3">
                            [[$socials]]
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="container-fluid menu-desktop d-none d-lg-block floating py-4">
        <div class="row">
            <div class="container-custom  ">
                <div class="row align-items-center">
                    <div class="col-auto d-lg-none">
                        <a href="#menu-mobile" class="menu-mobile-toggle">
                            <img src="assets/design/images/1VLdNQTj6h.png" alt="menu">
                            <img class='close' src="assets/design/images/2xugxSLUuT.png" alt="close">
                        </a>
                    </div>
                    <div class="col-lg-2">
                        <a href="/">
                            <img src="/assets/design/images/18e2dhGY6M.png" alt="logo">
                        </a>
                    </div>
                    <div class="col">
                         [[$menu]]
                     </div>
                    <div class="col-lg-2">
                        <a href="#modal-order" data-toggle="modal" class="btn btn-primary br-50 btn-block font-white">Записаться на прием</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>